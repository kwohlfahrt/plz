{
  "variables": {
    "aws-region": null,
    "source-ami": "ami-4d46d534",
    "tag": null,
    "group": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws-region`}}",
      "source_ami": "{{user `source-ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "batman-{{user `group`}}-{{user `tag`}}",
      "tags": {
        "Owner": "Infrastructure"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline_shebang": "/bin/sh -eux",
      "inline": [
        "sudo apt-get update -qq",
        "sudo apt-get install -qqy python"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./prepare.yml",
      "groups": "{{user `group`}}"
    }
  ]
}
