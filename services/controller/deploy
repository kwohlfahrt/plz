#!/usr/bin/env zsh

# This always deploys the latest version pushed, not the version on the current
# machine, because pulling a Docker image by digest is broken in Ansible.
#
# More details at https://github.com/ansible/ansible/issues/29913

set -eu

cd ${0:h}
ROOT=${PWD:h:h:a}

HOST=$(cd "${ROOT}/machines/ml" && terraform output controller-host)
SSH_PRIVATE_KEY_FILE="${ROOT}/machines/keys/batman.privkey"
TAG=$(make tag)
# DIGEST=$(docker inspect $TAG | jq -r '.[0].Id')
# IMAGE="${TAG}:${DIGEST}"
IMAGE=$TAG
SERVICE_PORT=80

ANSIBLE_INVENTORY=$(mktemp "${TMPDIR:/tmp/}inventory-XXXXX")
cat > $ANSIBLE_INVENTORY <<EOF
---
all:
  hosts:
    ${HOST}:
      ansible_user: "ubuntu"
      ansible_ssh_private_key_file: "${SSH_PRIVATE_KEY_FILE}"
      ansible_ssh_common_args: "-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"
  vars:
    image: "${IMAGE}"
    service_port: "${SERVICE_PORT}"
EOF
export ANSIBLE_INVENTORY

ansible-playbook playbook.yml

rm -f $ANSIBLE_INVENTORY
